    "lint": "eslint . --ext .ts",
    "test": "jest --detectOpenHandles --colors",
    "lint-and-fix": "eslint . --ext .ts --fix --cache",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himanshuteotia/typescript_node_server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/himanshuteotia/typescript_node_server/issues"
  },
  "homepage": "https://github.com/himanshuteotia/typescript_node_server#readme",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/lusca": "^1.6.2",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "lusca": "^1.6.1",
    "winston": "^3.3.3"
  },
  "hooks": {
    "pre-commit": "pretty-quick --staged --bail && lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint-and-fix"
    ]
  }
}
